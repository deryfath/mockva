<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/spacing_tiny"
				xmlns:app="http://schemas.android.com/apk/res-auto"
		>
	<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardCornerRadius="5dp"
			app:cardElevation="2dp"
			android:elevation="2dp">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="horizontal">

			<ImageView
					android:id="@+id/iv_item_search"
					android:layout_width="150dp"
					android:layout_height="100dp"
					android:scaleType="fitXY"
					android:adjustViewBounds="true"
					android:background="@color/color_icon"/>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="10dp"
					android:orientation="vertical">

				<TextView
						android:fontFamily="@font/raleway_semibold"
						android:id="@+id/tv_search_destination"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textStyle="bold"
						android:textSize="15sp"
						android:text="Batam Resort"
						android:minLines="2"
						android:maxLines="2"
						android:ellipsize="end"
						/>

				<TextView
						android:fontFamily="@font/raleway_regular"
						android:id="@+id/tv_price_booking"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Rp 190.000/orang"
						/>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="horizontal">

					<TextView
							android:fontFamily="@font/raleway_regular"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Duration : "/>

					<TextView
							android:layout_weight="1"
							android:fontFamily="@font/raleway_semibold"
							android:gravity="center_vertical"
							android:id="@+id/tv_search_duration"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="4 Hari"
							android:textStyle="bold"
							/>


				</LinearLayout>

			</LinearLayout>

		</LinearLayout>



	</androidx.cardview.widget.CardView>

</RelativeLayout>