<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  xmlns:chipcloud="http://schemas.android.com/tools"
			  android:fitsSystemWindows="true"
			  android:gravity="center"
			  android:background="#AD000000"
			  android:orientation="vertical">


		<LinearLayout
				android:id="@+id/ll_create_request_single_day"
				android:layout_width="match_parent"
				android:layout_height="150dp"
				android:gravity="center"
				android:background="@drawable/rounded_layout_top"
				android:orientation="horizontal">

			<ImageView
					android:gravity="end"
					android:layout_weight="0"
					android:tint="@color/white"
					android:layout_marginEnd="@dimen/spacing_tiny"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/alarm_check"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Single Day"
					android:textColor="@color/white"
					android:textSize="@dimen/font_title"
					android:fontFamily="@font/raleway_semibold"/>


		</LinearLayout>

	<LinearLayout
			android:id="@+id/ll_create_request_multi_day"
			android:layout_width="match_parent"
			android:layout_height="150dp"
			android:gravity="center"
			android:background="@drawable/rounded_layout_bottom"
			android:orientation="horizontal">

		<ImageView
				android:gravity="end"
				android:layout_weight="0"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_marginEnd="@dimen/spacing_tiny"
				android:tint="@color/white"
				android:src="@drawable/calendar_multiselect"/>
		<TextView
				android:textColor="@color/white"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Multi Day"
				android:textSize="@dimen/font_title"
				android:fontFamily="@font/raleway_semibold"/>


	</LinearLayout>



</LinearLayout>