<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_pager_main_item"
    android:layout_width="match_parent"
    android:layout_height="300dp"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"
    app:cardCornerRadius="15dp"
    app:cardElevation="2dp">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/view_page_main_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="@color/color_icon"    />

        <TextView
                android:visibility="gone"
                android:id="@+id/view_page_text_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/view_page_main_image"
                android:layout_alignTop="@id/view_page_main_image"
                android:layout_alignRight="@id/view_page_main_image"
                android:layout_alignBottom="@id/view_page_main_image"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Hello World"
                android:textColor="#fff" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>