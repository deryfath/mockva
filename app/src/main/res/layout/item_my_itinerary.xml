<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/spacing_tiny"
				xmlns:app="http://schemas.android.com/apk/res-auto"
		>
	<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardCornerRadius="5dp"
			app:cardElevation="2dp"
			android:elevation="2dp">

		<LinearLayout
				android:id="@+id/linear_cart_module_detail"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="horizontal">

			<ImageView
					android:id="@+id/iv_item_booking"
					android:layout_width="150dp"
					android:layout_height="100dp"
					android:scaleType="fitXY"
					android:adjustViewBounds="true"
					android:background="@color/color_icon"/>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="10dp"
					android:orientation="vertical">

				<TextView
						android:fontFamily="@font/raleway_semibold"
						android:id="@+id/tv_itinerary_name"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textStyle="bold"
						android:textSize="15sp"
						android:text="Batam Resort"
						android:minLines="2"
						android:maxLines="2"
						android:ellipsize="end"
						/>

				<TextView
						android:fontFamily="@font/raleway_regular"
						android:id="@+id/tv_booking_date"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Rp 150,00/person"
						/>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="end"
						android:orientation="horizontal">

					<ImageView
							android:layout_marginEnd="@dimen/spacing_small"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:tint="@color/grey_80"
							android:src="@drawable/briefcase_edit"/>

					<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:tint="@color/grey_80"
							android:src="@drawable/briefcase_remove"/>


				</LinearLayout>

			</LinearLayout>

		</LinearLayout>



	</androidx.cardview.widget.CardView>

</RelativeLayout>