<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <!--text-->
    <style name="AppTheme.TextAppearance.EditText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">@color/color_icon</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.TextAppearance.Label" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_icon</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.TextAppearance.Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/color_icon</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <!--button-->
    <style name="AppTheme.Widget.Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="DefaultViewDivider">
        <item name="android:alpha">0.1</item>e
        <item name="android:background">@color/color_divider_alpha_10</item>
    </style>

    <style name="SearchbarText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textColor">@color/color_icon</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="Yellow.Small.AppCompatRatingBar" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/color_icon</item>
        <item name="colorControlActivated">@color/yellow_star</item>
    </style>

    <style name="Yellow.Small.AppCompatRatingTitle" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/yellow_star</item>
    </style>

    <!--bottom sheet-->

    <style name="AppBottomSheetDialogTheme"
           parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
           parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>


    <!--bottom sheet-->
    <style name="Widget.BottomNavigationView"
           parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/raleway_semibold</item>
    </style>

</resources>
